{% set placeholderPicture = asset('pictures/snow.jpg') %}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Snow tricks{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>🏂</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
            <div>
                <a href="{{ path('app_homepage') }}" id="logo">🏂</a>
            </div>
            <div>
                <a href="{{ path('app_homepage') }}" class="button">Accueil</a>
                <a href="{{ path('app_homepage') }}" class="button">Tricks</a>
                {% if app.user %}
                    <a href="{{ path('app_logout') }}" class="button">Déconnexion</a>
                {% else %}
                    <a href="{{ path('app_login') }}" class="button">Connexion</a>
                    <a href="{{ path('app_register') }}" class="button">Inscription</a>
                {% endif %}
            </div>
        </header>
        {% for message in app.flashes('notice') %}
            <div class="flash-notice">
                {{ message }}
            </div>
        {% endfor %}
        {% block body %}{% endblock %}
        <footer id="desktop">
            <small>Copyright @ 2023</small>
        </footer>
        <footer id="mobile">
            <div>
                <a href="{{ path('app_homepage') }}" class="button">🏠 Accueil</a>
            </div>
            <div>
                <a href="{{ path('app_homepage') }}" class="button">🔙</a>
            </div>
            <div>
                {% if app.user %}
                    <a href="{{ path('app_logout') }}" class="button">🗣️ Déconnexion</a>
                {% else %}
                    <a href="{{ path('app_login') }}" class="button">🗣️ Connexion</a>
                {% endif %}
            </div>
        </footer>
    </body>
</html>
