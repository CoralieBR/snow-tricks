{% block title %}Trick: ajouter une nouvelle figure{% endblock %}

{% block body %}
<main class="trick-page">
    <div id="trickpage-picture-container" >
        <img src="{{ placeholderPicture }}" alt="photo de montagne enneigée">
    </div>

    <turbo-frame id="trick-new" class="current-frame">
        <div id="modal-new" class="trick-modal">
            <div id="trick-container">
                {% if isModal %}
                    <a style="color: white"href="{{ path('app_homepage') }}">FERMER ⊗</a>
                {% endif %}
                <div>
                    <img src="{{ placeholderPicture }}" alt="photo de montagne enneigée">
                </div>
                {% include "trick/_form.html.twig" %}
            </div>
        </div>
    </turbo-frame>
</main>
{% endblock %}
