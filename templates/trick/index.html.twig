                            {% if edit|default(false) %}
                                <div>
                                    <button>‚úèÔ∏è</button>
                                    <button>üóëÔ∏è</button>
                                </div>
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
                {% if edit|default(false) %}
                    {% include "trick/_form.html.twig" %}
                {% else %}
                    <div id="trick-infos">
                        <h1>{{ trick.name }}</h1>
                        {% for group in trick.groups %}
                        <p><i>{{ group.name }}</i></p>
                        {% endfor %}
                        <p>{{ trick.description }}</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </turbo-frame>
</main>
{% endblock %}
