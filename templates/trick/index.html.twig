{% block title %}Trick: {{ trick.name }}{% endblock %}

{% block body %}
<main class="trick-page">
    <div id="trickpage-picture-container" >
        <img src="{{ placeholderPicture }}" alt="photo de montagne enneig√©e">
    </div>

    <turbo-frame id="trick-{{ trick.id }}" class="current-frame">
