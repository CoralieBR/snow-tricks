<turbo-stream action="prepend" target="trick-comments-show">
    <template>
        {% include "trick/_comment.html.twig" %}
    </template>
</turbo-stream>

<turbo-stream action="update" target="comments-count">
    <template>
        {% if commentsCount > 1 %}
            {{ commentsCount }} commentaires
        {% elseif commentsCount == 1 %}
            1 commentaire
        {% else %}
            Pas encore de commentaire
        {% endif %}
    </template>
</turbo-stream>