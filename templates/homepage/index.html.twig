{% extends 'base.html.twig' %}

{% block body %}
    <div id="homepage-picture-container" >
        <img src="{{ placeholderPicture }}" alt="photo de montagne enneig√©e">
        <h1>Vive la neige!</h1>
    </div>
    <div id="add-trick-button">
        <a href="{{ path('app_trick_new')}}">Ajouter une figure</a>
    </div>
    <div class="cards-container" id="cards-container">
        {% for trick in tricks %}
            <div id="trick-{{ trick.id }}" class="trick-card">
                {% for medium in trick.media|filter(medium => medium.type == 'picture')|slice(0,1) %}
                    <img src="{{ asset('uploads/media/' ~ medium.path) }}" alt="photo de montagne enneig√©e">
                {% else %}
                    <img src="{{ placeholderPicture }}" alt="photo de montagne enneig√©e">
                {% endfor %}
                <div>
                    <h2>
                        <a href="{{ path('app_trick', { slug: trick.slug }) }}">{{ trick.name|capitalize }}</a>
                    </h2>
                    {% if app.user %}
                        <div>
                            <div class="button">
                                <a href="{{ path('app_trick_edit', { slug: trick.slug }) }}">‚úèÔ∏è</a>
                            </div>
                            <div class="button">
                                <a href="{{ path('app_trick_delete', { slug: trick.slug }) }}">üóëÔ∏è</a>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
