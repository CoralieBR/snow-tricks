{% extends 'base.html.twig' %}

{% block body %}
    <div id="homepage-picture-container" >
        <img src="{{ placeholderPicture }}" alt="photo de montagne enneigée">
        <h1>Vive la neige!</h1>
    </div>
    <div class="cards-container">
        {% for trick in tricks %}
            <div class="trick-card">
                <img src="{{ placeholderPicture }}" alt="photo de montagne enneigée">
                <div>
                    <a href="{{ path('app_trick', { slug: trick.slug }) }}">{{ trick.name|capitalize }}</a>
                    <div>
                        <button>✏️</button>
                        <button>🗑️</button>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
